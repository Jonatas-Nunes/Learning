<h1 class="text-center my-3">Cadastro de Usuários</h1>
<form action="/usuarios/Create" method="post">
    <div class="row w-50 d-block m-auto g-3">
        <div class="col-12">
            <label class="form-label" for="email">Nome:</label>
            <input class="form-control" type="nome" name="nome" id="nome" placeholder="Digite o nome do usuário" />
        </div>
        <div class="col-12">
            <label class="form-label" for="email">Email:</label>
            <input class="form-control" type="email" name="email" id="email" placeholder="Digite o seu e-mail." />
        </div>
        <div class="col-12">
            <label for="senha" class="form-label">Senha:</label>
            <input class="form-control" type="senha" name="senha" id="senha" placeholder="Digite sua senha aqui." />
        </div>
        <div>
            <input class="btn btn-primary my-3" type="submit" value="Cadastrar-se" />
        </div>
    </div>
</form>